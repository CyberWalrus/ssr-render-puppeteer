{
    "name": "ssr-render-puppeteer",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "start": "yarn build:client && yarn start:all",
        "start:all": "concurrently \"yarn preview:client\" \"yarn dev:server\"",
        "build": "yarn workspaces run build",
        "build:client": "yarn workspace client build",
        "preview:client": "yarn workspace client preview",
        "start:server": "yarn workspace server start",
        "dev:client": "yarn workspace client dev",
        "dev:server": "yarn workspace server dev",
        "lint": "yarn workspaces run lint:check",
        "install:all": "yarn"
    },
    "workspaces": [
        "client",
        "server"
    ],
    "devDependencies": {
        "@cyber-walrus/configs": "1.0.1",
        "concurrently": "8.2.2",
        "nodemon": "3.0.3",
        "tsc-alias": "1.8.8",
        "ts-node": "10.9.2"
    }
}