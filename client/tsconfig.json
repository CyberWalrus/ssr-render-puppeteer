{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist",
        "typeRoots": [
            "./types"
        ],
        "baseUrl": "./",
        "paths": {
            "$*": [
                "src/*"
            ]
        },
        "rootDirs": [
            ".",
            "__generated__"
        ],
    },
    "include": [
        "./**/*",
        "types",
        "storybook",
        "scripts",
        "vitest.setup.ts",
        ".eslintrc.cjs",
        "*.config.js",
        "*.config.cjs",
        "*.config.ts"
    ],
    "exclude": [
        "./dist",
        "../node_modules"
    ]
}