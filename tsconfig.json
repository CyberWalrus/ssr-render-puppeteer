{
    "extends": "@cyber-walrus/typescript-config/tsconfig.json",
    "compilerOptions": {
        "typeRoots": [
            "./types"
        ],
        "baseUrl": "./",
        "paths": {
            "$*": [
                "client/*"
            ]
        },
        "rootDirs": [
            ".",
            "__generated__"
        ],
    },
    "include": [
        "client",
        "server",
        "types",
        "storybook",
        "scripts",
        "vitest.setup.ts",
        ".eslintrc.cjs",
        "*.config.js",
        "*.config.cjs",
        "*.config.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}
