{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "lib": [
      "dom",
      "es2020"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "$*": [
        "client/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}